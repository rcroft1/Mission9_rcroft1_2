@{
    ViewData["Title"] = "Home Page";
}

@model BookStoreViewModel

<h1>Books</h1>

@*this gives us our output on the main page*@

@foreach (Book b in Model.Books)
{
    <partial name="BookSummary" model="b"/>
}

@*links at the bottom of the page*@

<div page-book="@Model.BookInfo" page-action="Index" page-classes-enabled="true"
     page-class="btn" page-class-normal="btn-outline-dark"
     page-class-selected="btn-primary" class="btn-group pull-right m-1"></div>
